<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>ControlCategorias</servlet-name>
        <servlet-class>controller.ControlCategorias</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControlCategoria</servlet-name>
        <servlet-class>controller.ControlCategoria</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControlEditoriales</servlet-name>
        <servlet-class>controller.ControlEditoriales</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControlEditorial</servlet-name>
        <servlet-class>controller.ControlEditorial</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControlLibros</servlet-name>
        <servlet-class>controller.ControlLibros</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControlCategorias</servlet-name>
        <url-pattern>/ControlCategorias</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControlCategoria</servlet-name>
        <url-pattern>/ControlCategoria</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControlEditoriales</servlet-name>
        <url-pattern>/ControlEditoriales</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControlEditorial</servlet-name>
        <url-pattern>/ControlEditorial</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControlLibros</servlet-name>
        <url-pattern>/ControlLibros</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
